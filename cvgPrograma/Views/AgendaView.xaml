<UserControl x:Class="cvgPrograma.Views.AgendaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cvgPrograma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:custom="clr-namespace:Modals;assembly=Modals"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             >
    <Grid>
        <custom:Modal x:Name="modalTeste" 
                      Panel.ZIndex="10"
                      >
            <custom:Modal.Background>
                <SolidColorBrush Opacity="0.3" Color="Black" ></SolidColorBrush>
            </custom:Modal.Background>
            <Grid Width="300"
                  Height="300"
                  Background="White">
                <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        >
                    <Button x:Name="btnCloseModal"
                        Margin="0 10 0 0"
                        Padding="10 5"
                        Click="OnCloseModalClick"
                        Content="Close Modal"></Button>
                </StackPanel>
            </Grid>

        </custom:Modal>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnShowModal"
                        Margin="0 10 0 20"
                        Padding="10 5"
                        Click="OnShowModalClick"
                        Content="Show Modal"></Button>
        </StackPanel>
    </Grid>
</UserControl>

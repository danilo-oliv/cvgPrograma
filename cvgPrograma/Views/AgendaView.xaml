      Style="{StaticResource MaterialDesignToolForegroundButton}" RenderTransformOrigin="1.2,0.604" Height="29">
                        <materialDesign:PackIcon
        Kind="Phone" />
                    </Button>

                </StackPanel>
            </Grid>
        </materialDesign:Card>


        <materialDesign:Card HorizontalAlignment="Right"
Padding="10,5"                           
Background="BlueViolet"
Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}" Margin="0,200,545,40" Width="370" Height="80">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
      Height="Auto" />
                    <RowDefinition
      Height="Auto" />
                    <RowDefinition
      Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
    Grid.Row="1"
    Margin="5,4,16,40"
    Style="{StaticResource MaterialDesignHeadline5TextBlock}"
    Text="Cliente" Grid.RowSpan="2" />
                <Separator
    Grid.Row="1"
    Style="{StaticResource MaterialDesignLightSeparator}" />
                <TextBlock
    Grid.Row="2"
    Margin="5,0,0,0"
    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    Style="{StaticResource MaterialDesignBody2TextBlock}"
    Text="Manutenção" Height="20" Width="80" />
                <StackPanel
    Grid.Row="2"
    Margin="16,10,10,8"
    HorizontalAlignment="Right"
    Orientation="Horizontal">
                    <Button
      Width="33"
      Padding="8,0,8,0"
      materialDesign:RippleAssist.IsCentered="True"
      Style="{StaticResource MaterialDesignToolForegroundButton}" RenderTransformOrigin="1.2,0.604" Height="29">
                        <materialDesign:PackIcon
        Kind="Phone" />
                    </Button>

                </StackPanel>
            </Grid>
        </materialDesign:Card>




        <materialDesign:Card HorizontalAlignment="Left"
Padding="10,5"                           
Background="Black"
Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}" Margin="1000,400,0,240" Width="355" Height="80">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
      Height="Auto" />
                    <RowDefinition
      Height="Auto" />
                    <RowDefinition
      Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
    Grid.Row="1"
    Margin="5,4,16,40"
    Style="{StaticResource MaterialDesignHeadline5TextBlock}"
    Text="Cliente" Grid.RowSpan="2" />
                <Separator
    Grid.Row="1"
    Style="{StaticResource MaterialDesignLightSeparator}" />
                <TextBlock
    Grid.Row="2"
    Margin="5,0,0,0"
    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    Style="{StaticResource MaterialDesignBody2TextBlock}"
    Text="Manutenção" Height="20" Width="80" />
                <StackPanel
    Grid.Row="2"
    Margin="16,10,10,8"
    HorizontalAlignment="Right"
    Orientation="Horizontal">
                    <Button
      Width="33"
      Padding="8,0,8,0"
      materialDesign:RippleAssist.IsCentered="True"
      Style="{StaticResource MaterialDesignToolForegroundButton}" RenderTransformOrigin="1.2,0.604" Height="29">
                        <materialDesign:PackIcon
        Kind="Phone" />
                    </Button>

                </StackPanel>
            </Grid>
        </materialDesign:Card>

    </Grid>
</UserControl>
<UserControl x:Class="cvgPrograma.Views.AgendaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cvgPrograma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:custom="clr-namespace:Modals;assembly=Modals"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             >
    <Grid>
        <!--MODAL ADICIONAR SERVIÇO-->
        <custom:Modal x:Name="modalTeste" 
                      Panel.ZIndex="10"
                      >
            <custom:Modal.Background>
                <SolidColorBrush Opacity="0.3" Color="Black" ></SolidColorBrush>
            </custom:Modal.Background>
            <Grid Width="515"
                  Height="335"
                  Background="White">
                <StackPanel HorizontalAlignment="Right" 
                        VerticalAlignment="Top"
                        >
                    <Button x:Name="btnCloseModal"
                        Margin="0 10 10 0"
                        Padding="2 0 2 0"
                            
                        Click="OnCloseModalClick"
                        >
                        <materialDesign:PackIcon Height="25" Width="25" Kind="CloseBoxOutline" />
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Adicionar Serviço"
                       HorizontalAlignment="Center"
                       Margin="15"
                      />
                    <TextBlock Text="Descrição:"
                            Margin="10"
                           />
                    <TextBox Width="400" 
                     HorizontalAlignment="Left"
                     Margin="10 0 10 10" Height="50"
                             FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Preço:"
                           Margin="10"/>
                        <TextBox Width="150" 
                     HorizontalAlignment="Left"
                     Margin="10 0 10 0" Height="25"/>
                        <TextBlock Text="Data de entrega:"
                           Margin="10"/>
                        <DatePicker Width="130"
                            materialDesign:HintAssist.Hint="Escolha uma data"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                    </StackPanel>
                    <TextBlock Text="Método de pagamento"
                       HorizontalAlignment="Left"
                       Margin="10"/>
                    <ComboBox materialDesign:HintAssist.Hint="Selecione"
                      Width="200"
                      HorizontalAlignment="Left"
                      Margin="10 0 10 0"
                      Padding="5">
                        <ComboBoxItem Content="Cartão de crédito" />
                        <ComboBoxItem Content="Cartão de débito" />
                        <ComboBoxItem Content="Dinheiro" />
                        <ComboBoxItem Content="Pix" />
                    </ComboBox>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Cliente:"
                           Margin="10"/>
                        <TextBox Width="150" 
                     HorizontalAlignment="Left"
                     Margin="10 0 10 0" Height="25"/>
                        <TextBlock Text="Contato:"
                           Margin="10"/>
                        <TextBox Width="155" 
                     HorizontalAlignment="Left"
                     Margin="10 0 10 0" Height="25"/>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                        <Button Width="90"
                    Content="Salvar"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}"
                    ToolTip="MaterialDesignOutlinedButton"
                        Margin="10"/>
                        <Button Width="90"
                    Content="Cancelar"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}"
                    ToolTip="MaterialDesignOutlinedButton"
                        Margin="10"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

        </custom:Modal>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnShowModal"
                        Margin="0 10 0 20"
                        Padding="10 5"
                        Click="OnShowModalClick"
                        Content="Novo Serviço"></Button>
        </StackPanel>

    </Grid>
</UserControl>

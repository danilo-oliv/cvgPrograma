<UserControl x:Class="cvgPrograma.Views.EstoqueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cvgPrograma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:custom="clr-namespace:Modals;assembly=Modals"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             >
    <Grid>
        <custom:Modal x:Name="modalTeste" 
                      Panel.ZIndex="10"
                      >
            <custom:Modal.Background>
                <SolidColorBrush Opacity="0.3" Color="Black" ></SolidColorBrush>
            </custom:Modal.Background>
            <Grid Width="515"
                  Height="445"
                  Background="White">
                <TextBlock 
                       TextAlignment="CENTER"
                       Margin="10">CADASTRAR PRODUTO</TextBlock>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="3*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!--PRIMEIRO QUADRANTE-->
                    <StackPanel x:Name="PRIMEIRO_QUADRANTE"
                        Grid.Row="1"
                        Grid.Column="0"
                        Orientation="Vertical"
                        
                        >
                        <!--NOME-->
                        <TextBlock Text="Nome:"
                            Margin="10"
                           />
                        <TextBox Width="200" 
                     HorizontalAlignment="Left"
                     Margin="10 0 10 10"
                             FontWeight="SemiBold"/>
                        <!--PREÇO CUSTO-->
                        <TextBlock Text="Preço de Custo:"
                           Margin="10"/>
                        <TextBox Width="150" 
                     HorizontalAlignment="Left"
                     Margin="10 0 10 0" Height="25"/>
                        <!--PREÇO VENDA-->
                        <TextBlock Text="Preço de Venda:"
                           Margin="10"/>
                        <TextBox Width="150" 
                     HorizontalAlignment="Left"
                     Margin="10 0 10 0" Height="25"/>
                        <TextBlock Text="Quantidade"
                       HorizontalAlignment="Left"
                       Margin="10"/>
                        <TextBox Width="150" 
                     HorizontalAlignment="Left"
                     Margin="10 0 10 10" Height="25"/>
                        <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Bottom"
                                Margin="10">
                            <Button Width="126"
                            Margin="10 0 10 0" 
                            Click="BtnLoadFromFile_Click">Inserir Imagem:</Button>
                            <Button Width="85"
                            Margin="10 0 10 0" 
                            Click="BtnLimparImagem">Limpar</Button>
                        </StackPanel>
                    </StackPanel>
                    <!--SEGUNDO QUADRANTE-->

                    <StackPanel x:Name="SEGUNDO_QUADRANTE"
                        Grid.Row="1"
                        Grid.Column="1"
                        >
                        <Button x:Name="btnCloseModal"
                        Margin="0 10 10 0"
                        Padding="2 0 2 0"
                        Click="OnCloseModalClick"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right">
                            <materialDesign:PackIcon Height="25" Width="25" Kind="CloseBoxOutline" />
                        </Button>
                        <Image Name="imgDynamic" 
                           Margin="0" 
                           Stretch="Uniform"
                           Width="160"
                           Height="200"
                           Panel.ZIndex="1"></Image>
                    </StackPanel>

                    <!--TERCEIRO QUADRANTE-->
                    <StackPanel x:Name="TERCEIRO_QUADRANTE"
                        Grid.Row="2"
                        Grid.Column="0"
                        >

                    </StackPanel>



                    <!--QUARTO QUADRANTE-->
                    <StackPanel x:Name="QUARTO_QUADRANTE"
                        Grid.Row="2"
                        Grid.Column="1"
                        >
                        <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                                Margin="0 20">
                            <Button Width="90"
                    Content="Salvar"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}"
                    ToolTip="MaterialDesignOutlinedButton"
                        Margin="10"/>
                            <Button Width="90"
                    Content="Cancelar"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}"
                    ToolTip="MaterialDesignOutlinedButton"
                        Margin="10"/>
                        </StackPanel>
                    </StackPanel>


                </Grid>
            </Grid>
        </custom:Modal>
        
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnShowModal"
                        Margin="0 10 0 20"
                        Padding="10 5"
                        Click="OnShowModalClick"
                        Content="Novo Produto"></Button>
        </StackPanel>

    </Grid>
</UserControl>

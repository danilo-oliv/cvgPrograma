<UserControl x:Class="cvgPrograma.Views.EstoqueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cvgPrograma.Views"
             xmlns:viewModel ="clr-namespace:cvgPrograma.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="White"
             Foreground="White"
             FontFamily="{DynamicResource MaterialDesignFont}"
                >
    <UserControl.Resources>
        <viewModel:EstoqueViewModel x:Key="vmEstoque"/>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource vmEstoque}">
        <!--Novo Produto-->
        <materialDesign:DialogHost>
            <materialDesign:DialogHost.DialogContent>
                <TextBlock>a</TextBlock>
            </materialDesign:DialogHost.DialogContent>
            <Button
                x:Name="mdDialog2"                
    Width="128"
    Margin="600,32,0,0"
    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
    Content="Novo Produto">
                <Button.CommandParameter>
                    <Grid Width="515"
                  Height="445"
                  Background="White">
                        <TextBlock 
                       TextAlignment="CENTER"
                       Margin="10">CADASTRAR PRODUTO</TextBlock>
                        <Button x:Name="btnCloseModal2"
                        Margin="0 10 10 0"
                        Padding="2 0 2 0"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"                        
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                            <materialDesign:PackIcon Height="25" Width="25" Kind="CloseBoxOutline" />
                        </Button>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="4*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <!--PRIMEIRO QUADRANTE-->
                            <StackPanel x:Name="PRIMEIRO_QUADRANTE"
                        Grid.Row="1"
                        Grid.Column="0"
                        Orientation="Vertical">
                                <!--NOME-->
                                <TextBox
                                x:Name="boxNomeProduto"
                                Text="{Binding txbxNomeProduto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0 10 10 10"
                                Width="195"
                                VerticalAlignment="Top"
                                materialDesign:HintAssist.Hint="Nome:"
                                materialDesign:HintAssist.HintOpacity="0.9"
                                AcceptsReturn="True"                       
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                                <TextBlock Text="{Binding txbxNomeProduto}"/>
                                <!--PREÇO CUSTO-->
                                <TextBox
                                Text="{Binding txtPrecoProduto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0 10 10 10"
                                Width="195"
                                VerticalAlignment="Top"
                                materialDesign:HintAssist.Hint="Preço de custo:"
                                materialDesign:HintAssist.HintOpacity="0.9"
                                AcceptsReturn="True"                       
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                                <!--PREÇO VENDA-->
                                <TextBox
                                Margin="0 10 10 10"
                                Width="195"
                                VerticalAlignment="Top"
                                materialDesign:HintAssist.Hint="Preço de venda:"
                                materialDesign:HintAssist.HintOpacity="0.9"
                                AcceptsReturn="True"                       
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                                <TextBox
                                Text="{Binding txtQuantidadeProduto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0 10 10 10"
                                Width="195"
                                VerticalAlignment="Top"
                                materialDesign:HintAssist.Hint="Quantidade:"
                                materialDesign:HintAssist.HintOpacity="0.9"
                                AcceptsReturn="True"                       
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                                <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Bottom"
                                Margin="10">
                                    <Button Width="126"
                            Margin="10 0 10 0" 
                            Click="BtnLoadFromFile_Click">Inserir Imagem:</Button>
                                    <Button Width="85"
                            Margin="10 0 10 0" 
                            Click="BtnLimparImagem">Limpar</Button>
                                </StackPanel>
                            </StackPanel>
                            <!--SEGUNDO QUADRANTE-->
                            <StackPanel x:Name="SEGUNDO_QUADRANTE"
                        Grid.Row="1"
                        Grid.Column="1">
                                <Image Name="imgDynamic" 
                           Margin="0 30" 
                           Stretch="Uniform"
                           Width="160"
                           Height="200"
                           Panel.ZIndex="1"></Image>
                            </StackPanel>
                            <!--TERCEIRO QUADRANTE-->
                            <StackPanel x:Name="TERCEIRO_QUADRANTE"
                        Grid.Row="2"
                        Grid.Column="0">
                            </StackPanel>
                            <!--QUARTO QUADRANTE-->
                            <StackPanel x:Name="QUARTO_QUADRANTE"
                        Grid.Row="2"
                        Grid.Column="1"
                        >
                                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                                Margin="0 20">
                                    <Button Width="90"
                                            Command="{Binding Adicionar}"
                    Content="Salvar"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}"
                    ToolTip="MaterialDesignOutlinedButton"
                        Margin="10"/>
                                    <Button Width="90"
                    Content="Cancelar"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"                                      
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}"
                    ToolTip="MaterialDesignOutlinedButton"
                        Margin="10"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Button.CommandParameter>
            </Button>
        </materialDesign:DialogHost>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">

                <StackPanel Margin="0" Orientation="Horizontal">
                    <TextBox
                    Foreground="Black"
                    MaxWidth="400"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Buscar produto:"
                    AcceptsReturn="True"
                    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                    Style="{StaticResource MaterialDesignFilledTextBox}"
                    TextWrapping="Wrap" />
                    <Button Content="{materialDesign:PackIcon Kind=Magnify}" Background="BlueViolet" Height="25" Padding="4" Width="25" Foreground="#FFF" Margin="5" FontSize="20" FontWeight="Bold"/>
                    
                </StackPanel>

            </StackPanel>
            
            
           
            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1" Margin="30">

                <Grid Background="LightSkyBlue" Width="180" Height="250" Margin="10">
                    <Grid.Effect>
                        <DropShadowEffect Color="#AAAA" Direction="320" ShadowDepth="8" BlurRadius="10"/>
                    </Grid.Effect>


                    <StackPanel Margin="15">
                        <Grid>
                            <Button x:Name="btnAdicionarImagem" Content="add photo" Width="120" Height="110" Click="btnAdicionarImagem_Click" />
                            <Image x:Name="imagemExibicao" Width="120" Height="110" />
                        </Grid>
                    </StackPanel>
                    
                    
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="Auto" Margin="0,130,0,0">
                        <TextBlock Text="Produto" FontSize="18" HorizontalAlignment="Center" Foreground="black" FontWeight="Bold" Margin="0"/>
                        <TextBlock Text="Em estoque: 47" FontSize="14" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="3"/>
                        <TextBlock Text="R$ 109,00" FontSize="14" HorizontalAlignment="Center" Foreground="black" FontWeight="Bold" Margin=".5"/>
                    </StackPanel>
                </Grid>

            </StackPanel>






            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="2" Margin="30">

                <Grid Background="LightSkyBlue" Width="180" Height="250" Margin="10">
                    <Grid.Effect>
                        <DropShadowEffect Color="#AAAA" Direction="320" ShadowDepth="8" BlurRadius="10"/>
                    </Grid.Effect>


                    <StackPanel Margin="15">
                        <materialDesign:PackIcon Kind="GamepadVariantOutline" Height="130" Width="120" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </StackPanel>


                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="Auto" Margin="0,130,0,0">
                        <TextBlock Text="Produto" FontSize="18" HorizontalAlignment="Center" Foreground="black" FontWeight="Bold" Margin="0"/>
                        <TextBlock Text="Em estoque: 47" FontSize="14" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="3"/>
                        <TextBlock Text="R$ 109,00" FontSize="14" HorizontalAlignment="Center" Foreground="black" FontWeight="Bold" Margin=".5"/>
                        <Button Content="Editar" Background="BlueViolet" Height="28" Padding="4" Width="78" Foreground="#FFF" Margin="10" FontSize="12" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>

            </StackPanel>


        </Grid>

    </Grid>
    
    
</UserControl>

